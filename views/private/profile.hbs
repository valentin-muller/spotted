<div class="profile-page">
    <div class="container">
        <div class="row">

            <div class="col col-xs-4">
                <a class="nav-link" href="/profile"><i class="fa fa-user"></i></a>
            </div>
            <div class="col col-xs-4">
                <a class="nav-link" href="/messages/create"><i class="fa fa-plus"></i></a>
            </div>
            <div class="col col-xs-4">
                <a class="nav-link" href="#"><i class="fa fa-power-off"></i></a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

        <div class="box-part text-center">

            <div class="profile-info">
                <div class="title">
                    <h2>Name: {{user.firstName}} </h2>
                    <h2>Last Name: {{user.lastName}}</h2>
                </div>

                <div class="text">
                    <h4>Gender: {{user.gender}}</h4>
                    <h4>Course: {{user.course}}</h4>
                </div>
            </div>
            <hr>
            <div class='personal-posts'>
                <h2>What you posted</h2>
                <br>
                {{#each user.messages}}
                <div class="my-post-card">
                    <h3>{{this.mainMessage}}</h3>
                    <p>Date: </p>
                </div>
                {{/each}}
            </div>


        </div>
    </div>
</div>